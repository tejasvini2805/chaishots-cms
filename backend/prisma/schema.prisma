generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      String   @default("EDITOR") // Changed Enum to String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

// Program Model
model Program {
  id                 String   @id @default(uuid())
  title              String
  description        String?
  
  // Simplified for SQLite (No arrays)
  languagePrimary    String   @default("en") @map("language_primary")
  languagesAvailable String   @default("en") @map("languages_available")
  
  status             String   @default("DRAFT") // Changed Enum to String
  
  publishedAt        DateTime? @map("published_at")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  // Relations
  terms   Term[]
  assets  Asset[]
  topics  Topic[]

  @@map("programs")
}

// Term Model
model Term {
  id          String   @id @default(uuid())
  title       String
  termNumber  Int      @map("term_number")
  programId   String   @map("program_id")
  program     Program  @relation(fields: [programId], references: [id])
  lessons     Lesson[]
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("terms")
}

// Lesson Model
model Lesson {
  id              String   @id @default(uuid())
  title           String
  description     String?
  lessonNumber    Int      @map("lesson_number")
  durationSeconds Int      @default(0) @map("duration_seconds")
  
  contentType     String   @default("VIDEO") @map("content_type")

  // Simplified for SQLite (No arrays or JSON)
  contentLanguagePrimary    String @default("en") @map("content_language_primary")
  contentLanguagesAvailable String @default("en") @map("content_languages_available")
  contentUrls               String @default("{}") @map("content_urls_by_language")
  
  subtitleLanguages         String @default("") @map("subtitle_languages")
  subtitleUrls              String @default("{}") @map("subtitle_urls_by_language")

  status          String    @default("DRAFT") // Changed Enum to String
  publishAt       DateTime? @map("publish_at")
  publishedAt     DateTime? @map("published_at")
  
  termId          String   @map("term_id")
  term            Term     @relation(fields: [termId], references: [id])
  
  assets          Asset[]
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("lessons")
}

// Asset Model
model Asset {
  id          String   @id @default(uuid())
  url         String
  type        String   @default("THUMBNAIL")
  variant     String   @default("LANDSCAPE")
  
  programId   String?  @map("program_id")
  program     Program? @relation(fields: [programId], references: [id])
  
  lessonId    String?  @map("lesson_id")
  lesson      Lesson?  @relation(fields: [lessonId], references: [id])

  createdAt   DateTime @default(now()) @map("created_at")
  
  @@map("assets")
}

// Topic Model
model Topic {
  id        String   @id @default(uuid())
  name      String
  programId String?  @map("program_id")
  program   Program? @relation(fields: [programId], references: [id])
  
  @@map("topics")
}